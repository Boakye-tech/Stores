@{
    ViewData["Title"] = "Index - Items";
}

<head>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript" lang="javascript">$(document).ready(function () {
            $.noConflict();
            $('#tblItems').DataTable();
        });</script>
    
</head>

<div class="text-center">
    <h1 class="display-4">List Of Items</h1>
</div>

@model IEnumerable<Stores.Models.Items>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Item Description</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Items" asp-action="CreateItem" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table id="tblItems" class="table table-bordered table-striped" style="width:100%" >
        <thead>
            <tr>
                <th>Item Code</th>
                <th>Item Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="25%">@item.ItemCode</td>
                    <td width="50%">@item.ItemDescription</td>
                    <td width="25">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Items" asp-action="UpdateItem" asp-route-ItemCode="@item.ItemCode" class="btn btn-secondary mx-1">Update</a>
                            <a asp-controller="Items" asp-action="DeleteItem" asp-route-ItemCode="@item.ItemCode" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 }
else
{
    <p>No items created yet</p>
}