@model Stores.Models.Items

@{
    ViewData["Title"] = "Index - Update Items";
}

<form method="post" asp-action="UpdateItem">
    <input asp-for="ItemCode" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Item</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemCode"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="ItemDescription"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemCode" disabled class="form-control" />
                    </div>
                    <div class="col-8">
                        <input asp-for="ItemDescription" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 text-center offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update Item" />
                        </div>
                        <div class="col">
                            <a asp-controller="Items" asp-action="Index" class="btn btn-secondary w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>