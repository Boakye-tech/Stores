@{
    ViewData["Title"] = "Index - Bin Card";
}

<head>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript" lang="javascript">$(document).ready(function () {
            $.noConflict();
            $('#tblBinCards').DataTable();
        });</script>

</head>

@model IEnumerable<Stores.Models.BinCardModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8 text-center">
            <h2 class="text-primary">BIN CARDS</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-controller="BinCard" asp-action="CreateBinCard" class="btn btn-primary">Create Bin Card</a>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table id="tblBinCards" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Bin Card Number</th>
                <th>Item Description</th>
                <th>Location Name</th>
                <th>Maximum Stock Level</th>
                <th>Minimum Stock Level</th>
                <th>ReOrder Level</th>
                <th>Stock Figures Unit</th>
                <th>Unit Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td width="12%">@item.BinCardNumber</td>
                <td width="20%">@item.ItemDescription</td>
                <td width="14%">@item.LocationName</td>
                <td width="10%">@item.MaximumStockLevel</td>
                <td width="10%">@item.MinimumStockLevel</td>
                <td width="10%">@item.ReOrderLevel</td>
                <td width="14%">@item.UnitName</td>
                <td width="20%">@item.UnitPrice</td>
                <td>
                    <a asp-controller="BinCard" asp-action="UpdateBinCard" asp-route-BinCardNumber="@item.BinCardNumber">Edit</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bin cards created yet</p>
}